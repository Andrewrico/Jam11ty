<!doctype html>
<html lang="{{ locale }}" class="no-js" dir="{{ dir }}">

    <head>

        {%- include "sections/head.njk" -%}

        {{- content_for_head | safe -}}
        
    </head>

    <body id="template-{% if title %}{{- title | lower | replace(' ', '-') -}}{% else %}page{% endif %}">

        <a class="visually-hidden" href="#main" title="skip to content" id="{% if title %}{{- title | lower | replace(' ', '-') -}}{% endif %}"> {{- theme.metadata.accesibility.skip_to_text | safe }} </a>

        {% include "sections/navigation.njk" %}
        
        {% include "sections/header.njk" %}

        <main id="main" role="main" tabindex="-1">
            {{- content_for_main | safe -}}
        </main>

        {%- include "sections/footer.njk" -%}

        <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
            navigator.serviceWorker.register('/service-worker.js');
            });
        }
        </script> 

        <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
        <script>
        if (window.netlifyIdentity) {
            window.netlifyIdentity.on("init", user => {
            if (!user) {
                window.netlifyIdentity.on("login", () => {
                document.location.href = "/admin/";
                });
            }
            });
        }
        </script>

        <a class="scrollup" href="#{% if title %}{{- title | lower | replace(' ', '-') -}}{% endif %}" title="scroll up"> {{- theme.metadata.accesibility.scroll_up | safe }} </a>

    </body>

</html>