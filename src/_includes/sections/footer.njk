<footer class="component-footer" role="contentinfo" aria-label="{{ aria }}">
  {% if theme.footer.wrapper == true %}
  <ul class="grid__wrapper footer__top" style="--column-count: repeat(4, 1fr)">
    <li>
        <ul>
        {%- if menus.main -%}
        {%- for item in menus.main -%}
        <li>
            <a href="{{ item.url | url }}" aria-label="{{ item.text }}"> {{ item.text }}</a>
        </li>
        {%- endfor -%}
        {%- endif -%}
        </ul>
    </li>
    <li>
        <ul>
        {%- if menus.learn -%}
        {%- for item in menus.learn -%}
        <li>
            <a href="{{ item.url | url }}" aria-label="{{ item.text }}"> {{ item.text }}</a>
        </li>
        {%- endfor -%}
        {%- endif -%}
        </ul>
    </li>
    <li>
        <ul>
        {%- if menus.support -%}
        {%- for item in menus.support -%}
        <li>
            <a href="{{ item.url | url }}" aria-label="{{ item.text }}"> {{ item.text }}</a>
        </li>
        {%- endfor -%}
        {%- endif -%}
        </ul>
    </li>
    <li>
        <ul>
        {%- if menus.social -%}
        {%- for item in menus.social -%}
        <li>
            <a href="{{ item.url | url }}" aria-label="{{ item.text }}"> {{ item.text }}</a>
        </li>
        {%- endfor -%}
        {%- endif -%}
        </ul>
    </li>
  </ul>
  {% endif %}
  {% if theme.footer.copyright == true %}
  <ul class="grid__wrapper footer__bottom" style="--column-count: 1fr 2fr">
    <li>{%- include "snippets/copyright.njk" -%}</li>
    <li>
        <ul>
        {%- if menus.disclaimer -%}
        {%- for item in menus.disclaimer -%}
        <li>
            <a href="{{ item.url | url }}" aria-label="{{ item.text }}"> {{ item.text }}</a>
        </li>
        {%- endfor -%}
        {%- endif -%}
        </ul>
    </li>
  </ul>
  {% endif %}
</footer>

<script src="/static/scripts.js" defer></script>

{% include "assets/inlineJS.njk" %}


<style>
.footer__bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.footer__bottom  ul {
    display: flex;
    align-items: center;
    gap: 1rem;
    width: 100%;
}
</style>

