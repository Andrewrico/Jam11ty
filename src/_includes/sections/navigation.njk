
  <nav class="jam11ty-section--navbar">
    <div class="navbar" role="navigation"  aria-label="{{ aria }}">
      <div class="navbar__logo">
        <h1>{{ site.name }}</h1>
      </div>
      {% if menus.main %}
      <ul class="navbar__menu">
        {% for item in menus.main %}
          {% set relAttribute = '' %}
          {% set currentAttribute = '' %}

          {% if item.rel %}
            {% set relAttribute = ' rel="' + item.rel + '"' %}
          {% endif %}

          {% if page.url == item.url %}
            {% set currentAttribute = ' aria-current="page"' %}
          {% endif %}

          <li>
            <a href="{{ item.url }}"{{ relAttribute | safe }}{{ currentAttribute | safe }}>{{ item.text }}</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
    </div>
  </nav>